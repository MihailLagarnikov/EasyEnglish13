<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
<LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/colorBacgroundTest"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="1"
                    style="@style/text14colorMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewNumber"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
            <TextView
                    android:text="Word"
                    style="@style/text16colorMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewEnglish" app:layout_constraintStart_toEndOf="@+id/textViewNumber"
                    android:layout_marginStart="64dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="перевод"
                    style="@style/text14colorLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewRussn"
                    app:layout_constraintTop_toBottomOf="@+id/textViewEnglish"
                    app:layout_constraintStart_toStartOf="@+id/textViewEnglish"/>
            <TextView
                    android:text="@string/theme7"
                    style="@style/text10colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDelet"
                    app:layout_constraintStart_toStartOf="@+id/textViewEnglish"
                    app:layout_constraintTop_toBottomOf="@+id/textViewRussn"/>
            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp" app:srcCompat="@drawable/arrow_right_drop_circle_outline"
                    android:id="@+id/imageView14" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="2dp" app:srcCompat="@drawable/divider_a"
                    android:id="@+id/imageView15"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</layout>
