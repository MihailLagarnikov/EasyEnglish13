<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorTextMain">

    <ImageView
            android:elevation="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/png_fase_course"
            android:id="@+id/imageView6" android:layout_marginBottom="175dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardCourseBottom" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="190dp" android:id="@+id/cardCourseBottom"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/colorBacgroundTest"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@string/course1"
                    style="@style/text10colorDarck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <Button
                    android:text="@string/course2"
                    android:background="@color/colorTextMain"
                    style="@style/text14colorWhite"
                    android:layout_width="216dp"
                    android:layout_height="48dp"
                    android:id="@+id/buttonChoseTheme2"
                    app:layout_constraintEnd_toStartOf="@+id/buttonChoseTheme1"
                    app:layout_constraintTop_toTopOf="@+id/buttonChoseTheme1"/>


                <ImageView
                        android:elevation="4dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/arrow_right"
                        android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/buttonChoseTheme1"
                        app:layout_constraintStart_toStartOf="@+id/buttonChoseTheme1" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@+id/buttonChoseTheme1"
                        app:layout_constraintBottom_toBottomOf="@+id/buttonChoseTheme1"/>
                <Button
                        android:background="@color/colorOrange"
                        android:layout_width="78dp"
                        android:layout_height="48dp"
                        android:id="@+id/buttonChoseTheme1" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="36dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
            android:layout_width="59dp"
            android:layout_height="59dp" app:srcCompat="@drawable/oval_orange"
            android:id="@+id/imageView7"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6"/>
    <TextView
            tools:text="10"
            style="@style/text30colorWhithe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNumberwords" app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7" android:layout_marginBottom="3dp"/>
    <TextView
            android:text="@string/course3"
            style="@style/text14colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <SeekBar
            android:rotation="270"
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:max="30"
            android:progress="1"
            style="@style/SeekBarColor"
            android:id="@+id/seekBar"
            app:layout_constraintBottom_toTopOf="@+id/cardCourseBottom" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView6"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
