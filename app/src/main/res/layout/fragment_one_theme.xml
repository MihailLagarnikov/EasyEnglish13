<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
>
<androidx.coordinatorlayout.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    ​
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >
        ​
        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/coloapseee"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp"
                app:layout_scrollFlags="scroll|enterAlways|snap"
        >
            ​
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp" android:id="@+id/cardView2">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                    <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="0dp"
                            android:layout_height="80dp" app:srcCompat="@drawable/ic_health_b_a"
                            android:id="@+id/imageView16" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <Button
                            android:background="@color/colorTextMain"
                            android:layout_width="48dp"
                            android:layout_height="80dp"
                            android:id="@+id/buttonStartStudyTop" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                            android:layout_width="48dp"
                            android:layout_height="24dp"
                            android:elevation="10dp" app:srcCompat="@drawable/arrow_long_new"
                            android:id="@+id/imageView9"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        ​​

        ​
        <LinearLayout
                android:id="@+id/materialupgggg"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
        >
            ​
            <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/cardOneTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="@color/colorBacgroundTest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                            android:background="@color/colorTextMain"
                            android:layout_width="48dp"
                            android:layout_height="0dp"
                            android:id="@+id/buttonStartStudy" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="@font/roboto_medium"/>
                    <TextView
                            android:text="@string/theme3"
                            style="@style/text14colorWhite"
                            android:rotation="270"
                            android:elevation="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewButtonStartLes"
                            app:layout_constraintBottom_toBottomOf="@+id/buttonStartStudy"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="@+id/buttonStartStudy" android:layout_marginEnd="2dp"/>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="80dp" app:srcCompat="@drawable/ic_health_b_b"
                            android:id="@+id/imageView10"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    />
                    <TextView
                            android:text="TextView"
                            style="@style/text20colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewThemeName" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" android:layout_marginTop="4dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:fontFamily="@font/roboto"/>
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp" app:srcCompat="@drawable/clock_outline"
                            android:id="@+id/imageView11" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                            android:text="@string/theme4"
                            style="@style/text10colorWhite"
                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewTimeThemeOne" app:layout_constraintStart_toEndOf="@+id/imageView11"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@+id/imageView11" android:fontFamily="@font/roboto_bold"/>
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp" app:srcCompat="@drawable/trending_up"
                            android:id="@+id/imageView12" app:layout_constraintStart_toEndOf="@+id/textViewTimeThemeOne"
                            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                            android:text="@string/theme5"
                            style="@style/text10colorWhite"
                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewProgressThemeOne"
                            app:layout_constraintStart_toEndOf="@+id/imageView12"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@+id/imageView12" android:fontFamily="@font/roboto_bold"/>
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp" app:srcCompat="@drawable/check_box_multiple_outline"
                            android:id="@+id/imageView13"
                            app:layout_constraintStart_toEndOf="@+id/textViewProgressThemeOne"
                            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                            android:text="@string/theme6"
                            style="@style/text10colorWhite"
                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewNumberWordThemeOne"
                            app:layout_constraintStart_toEndOf="@+id/imageView13"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@+id/imageView13" android:fontFamily="@font/roboto_bold"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            ​
        </LinearLayout>
        ​

    </com.google.android.material.appbar.AppBarLayout>
    ​


    <androidx.recyclerview.widget.RecyclerView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/cardOneTheme" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/recThemeWord" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    ​

</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>