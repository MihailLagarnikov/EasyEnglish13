            <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@{mVisibile.numberAnswer!=2 ? @color/colorBacgroundTest :(mVisibile.answerTrue ? @color/colorAnswerTrue : @color/colorAnswerFalse )}"
