                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:fontFamily="@font/roboto"/>
                <ImageView
                        android:visibility="@{!mVisibile.answerNotDone ? View.VISIBLE : View.GONE}"
                        android:layout_width="24dp"
                        android:layout_height="24dp" app:srcCompat="@drawable/ic_eclip"
                        android:id="@+id/imageEclip1TestAB" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="parent"
                        app:layout_constraintBottom_toTopOf="parent"/>
