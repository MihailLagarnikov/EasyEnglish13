            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                tools:text="Заголовок - Вопрос"
                android:visibility="@{mVisibile.typeTestA ? View.VISIBLE:(mVisibile.answerNotDone ? View.VISIBLE : View.GONE )}"
