                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/imageDivider4"
                android:layout_marginTop="73dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>

        <ImageView
