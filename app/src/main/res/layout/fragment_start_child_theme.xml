<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDont" android:id="@+id/constrFragmentThemeChild">

        <ImageView
                android:elevation="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_animal_a"
                android:id="@+id/imageViewTheme"
                app:layout_constraintStart_toStartOf="@+id/cardView4"
                app:layout_constraintEnd_toEndOf="@+id/cardView4" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                android:id="@+id/cardView4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="@+id/imageViewTheme" android:layout_marginTop="90dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/textView25">
        </androidx.cardview.widget.CardView>
        <TextView
                tools:text="ЖИВОТИНКО"
                android:elevation="13dp"
                style="@style/text24colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewThemeName" app:layout_constraintEnd_toEndOf="@+id/imageViewTheme"
                app:layout_constraintTop_toTopOf="@+id/imageViewTheme"
                app:layout_constraintStart_toStartOf="@+id/imageViewTheme"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewTheme" android:fontFamily="@font/roboto_bold"/>
        <ImageView
                android:elevation="13dp"
                android:layout_width="0dp"
                android:layout_height="4dp" app:srcCompat="@drawable/rectangl_red"
                android:id="@+id/imageView32"
                app:layout_constraintTop_toBottomOf="@+id/imageViewTheme"
                app:layout_constraintStart_toStartOf="@+id/imageViewTheme"/>
        <TextView
                android:text="@string/startChild1"
                style="@style/text14colorLight"
                android:textColor="@color/colorTextLight"
                android:elevation="13dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                app:layout_constraintTop_toBottomOf="@+id/imageViewTheme"
                app:layout_constraintEnd_toEndOf="@+id/cardView4"
                app:layout_constraintStart_toStartOf="@+id/cardView4" android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        <ImageView
                android:elevation="13dp"
                android:layout_width="0dp"
                android:layout_height="56dp" app:srcCompat="@drawable/rectangl_light"
                android:id="@+id/imageViewRectanglProgress"
                app:layout_constraintTop_toBottomOf="@+id/textView24" android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/cardView4" app:layout_constraintStart_toStartOf="@+id/cardView4"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        <TextView
                android:text="0"
                android:elevation="14dp"
                style="@style/text24colorWhite"
                android:textColor="@color/newMainColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCurentCountWords"
                app:layout_constraintTop_toTopOf="@+id/imageViewRectanglProgress"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewRectanglProgress"
                app:layout_constraintStart_toStartOf="@+id/imageViewRectanglProgress" android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_bold"/>
        <TextView
                android:text="@string/startChild2"
                style="@style/text16colorWhite"
                android:elevation="14dp"
                android:textColor="@color/newMainColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                app:layout_constraintTop_toTopOf="@+id/imageViewRectanglProgress"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewRectanglProgress"
                app:layout_constraintStart_toEndOf="@+id/textViewCurentCountWords" android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/textViewMax"/>
        <TextView
                tools:text="34"
                style="@style/text24colorWhite"
                android:textColor="@color/colorBacgroundTest"
                android:elevation="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMax"
                app:layout_constraintTop_toTopOf="@+id/imageViewRectanglProgress"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewRectanglProgress"
                app:layout_constraintEnd_toEndOf="@+id/imageViewRectanglProgress" android:layout_marginEnd="16dp"
                android:fontFamily="@font/roboto_bold"/>
        <Button
                android:text="@string/startChild3"
                android:textColor="@color/newMainColor"
                android:textSize="18sp"
                android:background="@color/newLight"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:id="@+id/buttonRepitTheme"
                app:layout_constraintEnd_toEndOf="@+id/cardView4" app:layout_constraintStart_toStartOf="@+id/cardView4"
                android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_medium" android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewRectanglProgress"
        />
        <ImageView
                android:elevation="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/repeat"
                android:id="@+id/imageViewRepiIcon"
                app:layout_constraintBottom_toBottomOf="@+id/buttonRepitTheme"
                app:layout_constraintTop_toTopOf="@+id/buttonRepitTheme"
                app:layout_constraintStart_toStartOf="@+id/buttonRepitTheme" android:layout_marginStart="32dp"/>
        <Button
                android:text="@string/startChild4"
                style="@style/text16colorWhite"
                android:background="@color/newMainColor"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:id="@+id/buttonStartStudi"
                app:layout_constraintEnd_toEndOf="@+id/cardView4" app:layout_constraintStart_toStartOf="@+id/cardView4"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonRepitTheme"/>
        <ImageView
                android:elevation="14dp"
                android:rotation="-45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/arrow_right"
                android:id="@+id/imageView34"
                app:layout_constraintEnd_toEndOf="@+id/imageViewTheme" android:layout_marginEnd="8dp"
                android:layout_marginTop="6dp" app:layout_constraintTop_toTopOf="@+id/imageViewTheme"/>
        <TextView
                android:text="@string/startChild7"
                android:elevation="14dp"
                style="@style/text14colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView30" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageViewTheme"
                app:layout_constraintEnd_toStartOf="@+id/imageView34"
                android:layout_marginEnd="16dp" android:fontFamily="@font/lekton" android:typeface="serif"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView25" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonStartStudi" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
