<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent"
            android:background="@drawable/ic_fon_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="112dp"
                android:layout_height="25dp" app:srcCompat="@drawable/ic_logonew_01_01"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>

        <com.tmall.ultraviewpager.UltraViewPager
                android:id="@+id/ultra_viewpager_intro"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorDont"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
